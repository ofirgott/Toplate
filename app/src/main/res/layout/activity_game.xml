<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="87dp"
        android:layout_marginLeft="87dp"
        android:layout_marginTop="7dp"
        android:layout_below="@id/imageGame"
        android:text="submit" />

    <ImageView
    android:id="@+id/imageGame"
    android:layout_width="200dp"
    android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/nacho_text_view_game"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/skipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="87dp"
        android:layout_marginRight="87dp"
        android:layout_marginTop="7dp"
        android:layout_below="@id/imageGame"
        android:text="skip" />



    <com.hootsuite.nachos.NachoTextView
        android:id="@+id/nacho_text_view_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What describes this dish best?"
        android:background="@drawable/back"
        android:layout_below="@id/gameRestaurantName"
        android:gravity="top"
        android:minLines="3"
        android:layout_marginTop="10dp"
        android:maxLines="3"
        android:layout_marginBottom="14dp"/>

    <TextView
        android:id="@+id/gamePlateName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="14dp"
        android:text="Plate Name"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/gameRestaurantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gamePlateName"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="53dp"
        android:text="Restaurant Name"
        android:textSize="20sp" />
</RelativeLayout>