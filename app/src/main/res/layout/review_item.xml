<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_reviewer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:text="name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/ratingBar5"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_reviewer_name"
        android:layout_marginTop="5dp"
        android:layout_alignStart="@+id/textView_reviewer_name"
        android:layout_alignLeft="@+id/textView_reviewer_name"
        android:rating="4" />

    <ImageButton
        android:id="@+id/reportReview"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_below="@id/textView_reviewer_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        app:srcCompat="@android:drawable/presence_busy" />

    <TextView
        android:id="@+id/textView_review_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ratingBar5"
        android:layout_alignStart="@+id/textView_reviewer_name"
        android:text="review content"
        android:textSize="18sp"
        android:layout_alignLeft="@+id/textView_reviewer_name" />


</RelativeLayout>