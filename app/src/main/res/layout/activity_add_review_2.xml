<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/restaurantNameChosen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="21dp"
        android:text="resaurant name"
        android:textSize="20sp" />

    <Button
        android:id="@+id/addReviewSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="136dp"
        android:layout_marginLeft="136dp"
        android:layout_marginBottom="32dp"
        android:text="continue" />


    <AutoCompleteTextView
        android:id="@+id/PlatesComplete"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="58dp"
        android:maxLines="1"
        android:completionThreshold="1"
        android:hint="search for the name..." />

    <RatingBar
        android:id="@+id/ratingBarAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="117dp" />

    <com.hootsuite.nachos.NachoTextView
        android:id="@+id/nacho_text_view_addreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/reviewTextBox"
        android:hint="What are you craving?"
        android:background="@drawable/back"
        android:gravity="top"
        android:minLines="4"
        android:maxLines="4"
        android:layout_marginBottom="14dp"/>

    <EditText
        android:id="@+id/reviewTextBox"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_above="@+id/addReviewSend"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/back"
        android:ems="10"
        android:gravity="top"
        android:hint="What did you think about your plate?"
        android:inputType="textMultiLine" />

    <ImageButton
        android:id="@+id/addPhotoButton"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignBottom="@+id/addReviewSend"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="140dp"

        android:layout_marginBottom="2dp"
        app:srcCompat="@drawable/ic_add_a_photo_black_36dp" />


</RelativeLayout>