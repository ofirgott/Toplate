<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/contactUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Contact Us"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/Youcanfind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/contactUs"
        android:layout_marginTop="50dp"
        android:text="You can find us on Facebook:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/toplate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Youcanfind"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="30dp"
        android:text="Toplate"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/orviaemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toplate"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="or via Email:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/toplategmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/orviaemail"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:text="toplate_contact@gmail.com"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageFacebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Youcanfind"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/com_facebook_button_icon_blue" />

</RelativeLayout>